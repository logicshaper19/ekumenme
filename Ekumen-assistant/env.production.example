# Production Environment Configuration
# Copy this to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================

# Supabase Database
SUPABASE_PROJECT_REF=your-project-ref-here
SUPABASE_DB_PASSWORD=your-supabase-db-password-here
DATABASE_URL=postgresql+asyncpg://postgres:your-supabase-db-password-here@db.your-project-ref-here.supabase.co:5432/postgres
DATABASE_URL_SYNC=postgresql://postgres:your-supabase-db-password-here@db.your-project-ref-here.supabase.co:5432/postgres

# Supabase Storage (for file storage)
SUPABASE_URL=https://your-project-ref-here.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# REDIS CONFIGURATION (REQUIRED)
# =============================================================================

# Redis (for caching and sessions)
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# ElevenLabs API (for voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Weather API
WEATHER_API_KEY=your-weather-api-key-here

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
DEBUG=false
LOG_LEVEL=INFO

# CORS (update with your frontend domain)
CORS_ORIGINS=["https://your-frontend-domain.com", "https://www.your-frontend-domain.com"]

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=/tmp/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600  # 1 hour

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================

# Prometheus (for metrics)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

# MesParcelles API
MESPARCELLES_API_URL=https://api.mesparcelles.fr/v1
MESPARCELLES_API_KEY=your-mesparcelles-api-key-here

# EPHY Data
EPHY_DATA_PATH=/data/ephy
EPHY_CSV_ENCODING=utf-8

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker
WORKERS=4
HOST=0.0.0.0
PORT=8000

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
