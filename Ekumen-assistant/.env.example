# Ekumen Assistant Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Security Configuration
SECRET_KEY=your_secret_key_here_generate_a_strong_random_string

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ekumen_assistant
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/ekumen_assistant

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=

# Voice Processing Configuration (ElevenLabs)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# Weather API Configuration (WeatherAPI.com)
WEATHER_API_KEY=your_weather_api_key_here

# Meteo France API Configuration
METEO_FRANCE_API_KEY=your_meteo_france_api_key_here

# Farm Data API Configuration (Optional - not currently used)
MES_PARCELLES_API_URL=
MES_PARCELLES_API_KEY=

# Monitoring (Optional)
SENTRY_DSN=
