# Database Configuration
DATABASE_URL=postgresql://agri_user:agri_password@localhost:5432/agri_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=agri_db
DATABASE_USER=agri_user
DATABASE_PASSWORD=agri_password

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MesParcelles API
MESPARCELLES_API_URL=https://api.mesparcelles.fr/v1
MESPARCELLES_API_KEY=your-mesparcelles-api-key-here

# EPHY Data
EPHY_DATA_PATH=/data/ephy
EPHY_CSV_ENCODING=utf-8

# Application Settings
DEBUG=true
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/tmp/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
